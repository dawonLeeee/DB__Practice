<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
<comment>member-query.xml file</comment>
	
	
	
	<!-- 내 정보 수정(이름, 성별) -->
	<entry key="updateMember">
		UPDATE "MEMBER"
		SET MEMBER_NM = ?
		WHERE MEMBER_ID = ?
	</entry>
	
	<entry key="secession">
		UPDATE "MEMBER" 
		SET SECESSION_FL = 'Y'
		WHERE MEMBER_NO = ?
	</entry>
	
	<entry key="lookMembers">
		SELECT MEMBER_ID, MEMBER_NM, MEMBER_GENDER
		FROM "MEMBER"
	</entry>
	

	
	<entry key="updatePw">
		UPDATE "MEMBER"
		SET MEMBER_PW = ?
		WHERE MEMBER_ID = ?
	</entry>
	
</properties>


